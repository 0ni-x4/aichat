{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Coreframe",
  "version": "0.1.0",
  "identifier": "com.coreframe.desktop",
  "build": {
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out",
    "beforeDevCommand": "",
    "beforeBuildCommand": "DESKTOP_BUILD=1 next build && DESKTOP_BUILD=1 next export"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Coreframe",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "titleBarStyle": "Transparent",
        "hiddenTitle": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
